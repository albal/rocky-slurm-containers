# Controller Image
FROM ubiquitycluster/slurm-base:latest

# Ensure Munge is set up
RUN chown munge:munge /etc/munge/munge.key && chmod 400 /etc/munge/munge.key

# Create necessary directories and set permissions
RUN mkdir -p /var/log/slurm /var/spool/slurmctld /var/spool/slurmrestd && \
    chown slurm:slurm /var/log/slurm /var/spool/slurmctld /var/spool/slurmrestd

# Expose necessary ports
EXPOSE 6817 6820

# Start command
CMD ["sh", "-c", "\
    cp /tmp/munge.key /etc/munge/ && \
    munged --force && \
    cp /secrets/slurm/jwt_hs256.key /var/spool/slurm/jwt_hs256.key && \
    slurmctld -D -v -f /etc/slurm/slurm.conf & \
    slurmrestd -f /etc/slurm/slurm.conf -a rest_auth/jwt 0.0.0.0:6820 \
"]
