# Worker Image
FROM ghcr.io/logicalisuki/slurm-containers/slurm-base:latest

# Additional dependencies for the worker
RUN apt-get update && apt-get install -y \
    libmunge2 \
    munge && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Ensure Munge is set up
RUN chown munge:munge /etc/munge/munge.key && chmod 400 /etc/munge/munge.key

# Expose tcp22 for login
EXPOSE map[22/tcp:{}]

# Start command
CMD ["slurmd"]

